{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "noEmit": false,
        "composite": true,
        "strict": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./",
        "allowJs": true,
        "outDir": "dist",
        "types": ["bun-types"]
    },
    "include": [
        "./src/**/*",
        "./src/manifest.json"
    ],
    "exclude": [
        "manifest.json"
    ]
}
